<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Custom theme. -->
    <style name="CustomActionBarTheme"
           parent="AppTheme">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBarStyle"
           parent="CustomActionBarTheme">
        <item name="android:background">@color/red</item>
    </style>

    <!--  Card Styles -->
    <style name="CardBase" parent="AppBaseTheme">
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_height">fill_parent</item>
            <item name="android:background">@color/white</item>
            <item name="android:orientation">vertical</item>
            <item name="android:padding">@dimen/marginMain</item>
            <item name="android:paddingBottom">@dimen/marginSmall</item>
    </style>
    
    <!--  Text Styles -->
    <style name="RobotoLight" parent="AppBaseTheme">
        <item name="android:fontFamily">sans-serif-light</item> 
    </style>
    
   	<style name="TextMedium" parent="RobotoLight">
		<item name="android:textSize">18sp</item> 
    </style>
    
   	<style name="TextMicro" parent="RobotoLight">
		<item name="android:textSize">12sp</item>
    </style>
    
    <style name="BlueText" parent="TextMicro">
    	<item name="android:textColor">@color/blue</item>
    </style>
    
</resources>

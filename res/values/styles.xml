<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
     	  <item name="android:textSize">16sp</item>
     	  <item name="android:icon">@drawable/ic_menu_logo</item>
    </style>
    
    <style name="PostButton" parent="AppBaseTheme">
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/blue</item>
        <item name="android:layout_marginBottom">@dimen/list_divider_height</item>
    </style>
    
     <style name="BlueText" parent="AppBaseTheme">
        <item name="android:background">@color/blue</item>
        <item name="android:paddingLeft">@dimen/ups_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/ups_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/ups_padding_vertical</item>
 		<item name="android:paddingBottom">@dimen/ups_padding_vertical</item>
        <item name="android:text">@string/example_ups</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item> 
     </style>
    
     <style name="PostText" parent="BlueText">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:focusable">false</item>
     </style>
     
</resources>
